{
  "name": "wasm-video-player",
  "version": "0.1.0",
  "description": "High-performance web-based video player with WASM-powered decoding",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "wasm:build": "cd crates/player-core && wasm-pack build --target web --out-dir ../../pkg",
    "wasm:dev": "cd crates/player-core && wasm-pack build --target web --dev --out-dir ../../pkg"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "mp4box": "^0.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/dom-webcodecs": "^0.1.11",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-basic-ssl": "^1.2.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
