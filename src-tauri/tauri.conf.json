{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "WASM Video Player",
  "version": "0.1.0",
  "identifier": "com.wasm-video-player.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "https://localhost:3002",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "WASM Video Player",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://localhost:* http://localhost:*; worker-src 'self' blob:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
